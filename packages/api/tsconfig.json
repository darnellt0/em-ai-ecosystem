{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@em/orchestrator": ["../orchestrator/src/index"],
      "@em/orchestrator/*": ["../orchestrator/src/*"]
    },
    "rootDirs": ["./src", "../orchestrator/src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests/**/*"],
  "ts-node": {
    "esm": false,
    "transpileOnly": true
  }
}
