# Elevated Movements AI Ecosystem - Production Environment Configuration
# ========================================================================
# IMPORTANT: This file contains production environment variable templates.
# Copy this file and fill in actual values for your production deployment.
# DO NOT commit actual production values to version control.

# Core Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database (Managed PostgreSQL)
# Get from Railway/Render managed database service
DATABASE_URL=postgresql://username:password@host:5432/database_name
POSTGRES_USER=elevated_movements
POSTGRES_PASSWORD=<STRONG_PASSWORD_HERE>
POSTGRES_DB=em_ecosystem

# Redis Cache (Managed Redis)
# Get from Railway/Render managed Redis service
REDIS_URL=redis://username:password@host:6379

# API Keys (Required for all agents)
OPENAI_API_KEY=sk-<YOUR_OPENAI_API_KEY>
CLAUDE_API_KEY=sk-<YOUR_CLAUDE_API_KEY>
ELEVENLABS_API_KEY=<YOUR_ELEVENLABS_API_KEY>

# Google Integration (Phase 6 Growth Agents)
# Base64-encoded Google service account JSON
GOOGLE_SERVICE_ACCOUNT_JSON_B64=<BASE64_ENCODED_SERVICE_ACCOUNT_JSON>

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=<YOUR_GMAIL_ADDRESS>
SMTP_PASS=<YOUR_GMAIL_APP_PASSWORD>
GMAIL_SENDER_ADDRESS=<YOUR_GMAIL_ADDRESS>

# Twilio (SMS/Phone Integration)
TWILIO_ACCOUNT_SID=<YOUR_TWILIO_ACCOUNT_SID>
TWILIO_AUTH_TOKEN=<YOUR_TWILIO_AUTH_TOKEN>
TWILIO_FROM_NUMBER=<YOUR_TWILIO_PHONE_NUMBER>

# Founder Configuration
FOUNDER_DARNELL_CALENDAR_ID=<CALENDAR_ID>@gmail.com
FOUNDER_DARNELL_EMAIL=darnell@elevatedmovements.com
FOUNDER_SHRIA_CALENDAR_ID=<CALENDAR_ID>@gmail.com
FOUNDER_SHRIA_EMAIL=shria@elevatedmovements.com

# Feature Flags
ENABLE_GROWTH_AGENTS=true
DEEP_WORK_MIN_DURATION_MIN=90
FIELD_TRIP_TUESDAY_ENABLED=true
MAX_BACK_TO_BACK_MEETINGS=3

# Cost Controls
MONTHLY_COST_LIMIT=5000
WARNING_COST_THRESHOLD=4000

# Security
# Generate secure random tokens for production
VOICE_API_TOKEN=<GENERATE_SECURE_RANDOM_TOKEN>
SESSION_SECRET=<GENERATE_SECURE_RANDOM_TOKEN>

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Error Tracking (Sentry)
SENTRY_DSN=<YOUR_SENTRY_DSN>
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Monitoring & Logging
# Optional: Configure external logging service
LOG_SERVICE_URL=
LOG_SERVICE_API_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# n8n Automation (if using)
N8N_PASSWORD=<STRONG_PASSWORD_HERE>
N8N_BASIC_AUTH_ACTIVE=true
