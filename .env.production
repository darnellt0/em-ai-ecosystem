# ============================================
# EM-AI ECOSYSTEM - PRODUCTION CONFIGURATION
# ============================================

# Server
NODE_ENV=production
PORT=3001
API_BASE_URL=http://localhost:3001

# Founder Info
FOUNDER_EMAIL=darnell@elevatedmovements.com
FOUNDER_EMAIL_SHRIA=shria@elevatedmovements.com

# ============================================
# GOOGLE WORKSPACE (OAuth 2.0)
# ============================================
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# Service Account (for server-to-server)
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./credentials/google-service-account.json

# Scopes needed:
# - https://www.googleapis.com/auth/calendar
# - https://www.googleapis.com/auth/gmail.modify
# - https://www.googleapis.com/auth/drive.readonly

# ============================================
# OPENAI (Whisper STT + GPT)
# ============================================
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=

# ============================================
# ELEVENLABS (Voice TTS)
# ============================================
# Get from: https://elevenlabs.io/api

ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Shria's cloned voice ID (if available)
ELEVENLABS_VOICE_ID_SHRIA=

# ============================================
# DATABASE (PostgreSQL)
# ============================================

DATABASE_URL=postgresql://emadmin:empassword@localhost:5432/em_ecosystem
POSTGRES_USER=emadmin
POSTGRES_PASSWORD=empassword
POSTGRES_DB=em_ecosystem

# ============================================
# REDIS (Queue + Cache)
# ============================================

REDIS_URL=redis://localhost:6379

# ============================================
# N8N CONFIGURATION
# ============================================

N8N_PORT=5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=
N8N_ENCRYPTION_KEY=

# Webhook URL for external triggers
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# ============================================
# SLACK (Optional - for notifications)
# ============================================

SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#em-alerts

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
LOG_FILE=./logs/em-ecosystem.log

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_VOICE_API=true
ENABLE_GROWTH_AGENTS=true
INCLUDE_GROWTH_IN_DAILY_BRIEF=true
EM_ENABLE_VOICE=true

# ============================================
# MCP CONFIGURATION
# ============================================

# Enable MCP integration (set to 'true' to enable)
USE_MCP=false

# Journal storage path for filesystem MCP
JOURNAL_PATH=C:/dev/elevated-movements/em-ai-ecosystem/data/journals

# MCP Debug mode
MCP_DEBUG=false
